{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [ "src/*", "node_modules/*" ]
    }
  },
  "include": [ "./*.js", "src/**/*.ts", "test/**/*.ts" ],
  "exclude": [ "node_modules", "dist" ]
}